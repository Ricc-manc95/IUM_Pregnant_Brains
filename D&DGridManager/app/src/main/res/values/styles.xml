<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Fab" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/material_orange_400</item>
    </style>

    <style name="CreationBarTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="CreationToolbarTheme" parent="AppTheme" />

    <style name="GridManipulationMenuTheme" parent="AppTheme">
        <item name="android:background">@color/material_white_1000</item>
    </style>
</resources>
